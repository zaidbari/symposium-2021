{% extends "layout.twig" %}
{% block content  %}
    <div class="login">
        <div class="row mx-0 px-0" >
            <div class="col-md-4 align-self-center offset-1 right">
                <form action="" method="post">
                        <h3 class="mt-5 mb-3 fw-bold text-primary">Welcome to MEGMA</h3>
                        <p class="lead mb-5 fw-bold text-muted">New Here? <a href="/register" class="text-success">Create new account</a></p>
                        <div class="mb-3">
                            <label for="email" class="form-label">Email address</label>
                            <input type="email" name="email" id="email" class="form-control" required />
                            {% for err in errors.email %}
                                <span class="text-danger w-100">{{ err }}</span> <br />
                            {% endfor %}
                        </div>
                        <div class="mb-3">
                            <label for="password" class="form-label">Password</label>
                            <input type="password" name="password" id="password" class="form-control" required />
                            {% for err in errors.password %}
                                <span class="text-danger w-100">{{ err }}</span>
                            {% endfor %}
                        </div>
                        <div class="my-4">
                            <button class="btn btn-primary px-4">Login</button>
                        </div>

                </form>
            </div>
            <div class="col-md-4 img offset-3 d-flex bg-primary">
                <img src="/resources/assets/images/shapes/login.svg" class="img-fluid" alt="">
            </div>
        </div>

    </div>
{% endblock %}
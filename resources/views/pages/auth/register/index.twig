{% extends "layout.twig" %}
{% block content  %}
    <style>
        .c-save-resume-button-container {
            display: none;
        }
        legend {
            display: none !important;
        }
        input, select {
            display: block;
            width: 100%;
            padding: 10px 20px;
            font-size: 1rem;
            font-weight: 400;
            line-height: 1.5;
            color: #222222;
            background-color: #eff1f4;
            background-clip: padding-box;
            border: 2px solid #eff1f4;
            appearance: none;
            border-radius: 0.25rem;
            transition: border-color 0.15s ease-in-out, box-shadow 0.15s ease-in-out;
        }
    </style>
    <main>
        <div class="bg-light py-5">
            <div class="container text-center"><h3>2nd International MEGMA Syposium - UAE Attendee Registration</h3></div>
        </div>
        <div class="container my-5">
            <div>
                <div class="row">
                    <div class="col-md-8">
                        <p class="lead">
                            Scan the Code to pay Early Bird Discounted Registration Charges (200 AED). and open the link in new tab
                        </p>
                        <p class="lead">Registration charges AED - 350<br> Early Bird Discounted charges - AED 200<br> (Early Bird discount is valid until 30 September)</p>
                        <a href="https://secure.2checkout.com/checkout/buy?merchant=103055722&tpl=default&prod=10011&qty=1" target="_blank" class="btn btn-primary">Pay now</a>
                    </div>
                    <div class="col-md-4">
                        <img src="/resources/assets/images/svg/barcode.jpeg" alt="" class="img-fluid">
                    </div>
                </div>
            </div>
            <div class="cognito">
                <script src="https://www.cognitoforms.com/s/n-oxFec6v0SazUVQi5Fm9A"></script>
                <script>Cognito.load("forms", { id: "44" });</script>
            </div>
        </div>
    </main>
{%  endblock  %}


